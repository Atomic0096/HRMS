@page "/attendances/create"
@using Microsoft.EntityFrameworkCore
@using HRMS.Models
@inject IDbContextFactory<HRMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Attendance</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Attendance" OnValidSubmit="AddAttendance" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="dateofattendance" class="form-label">DateOfAttendance:</label> 
                <InputDate id="dateofattendance" @bind-Value="Attendance.DateOfAttendance" class="form-control" /> 
                <ValidationMessage For="() => Attendance.DateOfAttendance" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="status" class="form-label">Status:</label> 
                <InputText id="status" @bind-Value="Attendance.Status" class="form-control" /> 
                <ValidationMessage For="() => Attendance.Status" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="employeeid" class="form-label">EmployeeId:</label> 
                <InputNumber id="employeeid" @bind-Value="Attendance.EmployeeId" class="form-control" /> 
                <ValidationMessage For="() => Attendance.EmployeeId" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/attendances">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Attendance Attendance { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAttendance()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attendance.Add(Attendance);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/attendances");
    }
}
