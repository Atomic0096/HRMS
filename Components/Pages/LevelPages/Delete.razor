@page "/levels/delete"
@using Microsoft.EntityFrameworkCore
@using HRMS.Models
@inject IDbContextFactory<HRMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Level</h2>
    <hr />
    @if (level is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">LevelName</dt>
            <dd class="col-sm-10">@level.LevelName</dd>
        </dl>
        <EditForm method="post" Model="level" OnValidSubmit="DeleteLevel" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(level is null)">Delete</button> |
            <a href="/levels">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Level? level;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        level = await context.Level.FirstOrDefaultAsync(m => m.Id == Id);

        if (level is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteLevel()
    {
        using var context = DbFactory.CreateDbContext();
        context.Level.Remove(level!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/levels");
    }
}
